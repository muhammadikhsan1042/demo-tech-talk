{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strict": true,
    "strictFunctionTypes": true,
    "skipLibCheck": false,
    "paths": {
      "@config/*" : ["config/*"],
      "@shared/*" : ["shared/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"],
}